<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaotian.framework"
    android:installLocation="preferExternal"
    android:versionCode="1001"
    android:versionName="1.1" >

    <uses-sdk
        android:maxSdkVersion="19"
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />
    <!-- 开启用户允许的权限 -->


    <!-- 访问粗略地址 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 访问精确地址 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 访问 WiFi 状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 改变 WiFi 状态 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 读取电话状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 加载/卸载 文件系统 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 读取Log -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- 外部存蓄写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读取电话状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 查询联系人 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- 读取联系人 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 写入联系人 -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 震动 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 安装包 -->
    <!-- <uses-permission android:name="android.permission.INSTALL_PACKAGES" /> -->
    <!-- 读取信息 -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <!-- 发送信息 -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- 写信息 -->
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <!-- 打电话 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 闹铃[唤醒铃] -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 重启程序包 -->
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <!-- 读取手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 修改手机状态 -->
    <!-- <uses-permission android:name="android.permission.MODIFY_PHONE_STATE"/> -->
    <!-- 录音 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 从分配任务 -->
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <!-- 读取WiFi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 修改WiFi状态 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 读取性能 -->
    <!-- <uses-permission android:name="android.permission.ACCESS_CHECKIN_PROPERTIES"/> -->
    <!-- 读取用户个人信息 -->
    <uses-permission android:name="android.permission.READ_OWNER_DATA" />
    <!-- 写入用户个人信息 -->
    <uses-permission android:name="android.permission.WRITE_OWNER_DATA" />
    <!-- 管理联系人 -->
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <!-- 认证联系人 -->
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <!-- 读取同步设置 -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <!-- 写入同步设置 -->
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <!-- 读取同步状态 -->
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <!-- 设置程序优先级 -->
    <!-- <uses-permission android:name="android.permission.SET_PREFERRED_APPLICATIONS"/> -->
    <!-- 修改音频设置 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- 设置WiFi -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 接受 引导完成 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 关闭键盘 -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <!-- 访问蓝牙 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!-- 获取Activity堆栈 -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <!-- 用户系统需求声明 -->
    <!-- <uses-feature android:name="string" android:required=["true" | "false"] android:glEsVersion="integer" /> -->
    <!-- 摄像头[必须] -->
    <uses-feature android:name="android.hardware.camera" />
    <!-- 使用摄像头自动对焦[必须] -->
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 蓝牙[非必须] -->
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />
    <!-- 定位 -->
    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />
    <!-- GPS定位 -->
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <!-- 拨号 -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <!-- 触屏 -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <!-- WiFi -->
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />
    <!-- 摄像头 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <!-- 使用相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 闪光灯 -->
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/xiaotian_ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        <activity
            android:name="com.xiaotian.framework.ActivityFullscreen"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.xiaotian.framework.activity.test.ActivityPattern" />
        <!-- Rejuest Broadcast Receiver -->
        <receiver android:name="com.xiaotian.framework.receiver.BroadcastReceiverNetworkState" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <!-- Toast Receiver -->
        <receiver
            android:name="com.xiaotian.framework.service.BRToast"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.xiaotian.framework.service.BRToast" />

                <category android:name="com.xiaotian.framework.service" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.google.zxing.client.BarcodeCaptureActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
    </application>

</manifest>